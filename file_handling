import os

print("1ï¸âƒ£ Writing to file using 'w' mode...")
with open("sample.txt", "w") as file:
    file.write("Hello, World!\nThis is a sample text file.\n")
print("âœ… File written successfully!\n")
# Output:
# âœ… File written successfully!

print("2ï¸âƒ£ Reading file using 'r' mode...")
with open("sample.txt", "r") as file:
    content = file.read()
print("ğŸ“„ File Content:\n", content)
# Output:
# ğŸ“„ File Content:
# Hello, World!
# This is a sample text file.

print("3ï¸âƒ£ Appending data using 'a' mode...")
with open("sample.txt", "a") as file:
    file.write("Appending a new line.\n")
print("âœ… Data appended successfully!\n")
# Output:
# âœ… Data appended successfully!

print("4ï¸âƒ£ Reading file after appending:")
with open("sample.txt", "r") as file:
    print(file.read())
# Output:
# Hello, World!
# This is a sample text file.
# Appending a new line.

print("5ï¸âƒ£ Trying to create a new file using 'x' mode...")
try:
    with open("newfile.txt", "x") as file:
        file.write("This file is created using 'x' mode.\n")
    print("âœ… File created successfully!")
except FileExistsError:
    print("âŒ Error: File already exists!")
# Output:
# âœ… File created successfully!

print("6ï¸âƒ£ Writing binary data using 'wb' mode...")
binary_data = b'\x00\x01\x02\x03\x04'
with open("binary_file.bin", "wb") as file:
    file.write(binary_data)
print("âœ… Binary file written successfully!")
# Output:
# âœ… Binary file written successfully!

print("7ï¸âƒ£ Reading binary data using 'rb' mode...")
with open("binary_file.bin", "rb") as file:
    binary_content = file.read()
print("ğŸ”¢ Binary Content Read:", binary_content)
# Output:
# ğŸ”¢ Binary Content Read: b'\x00\x01\x02\x03\x04'

print("8ï¸âƒ£ Appending binary data using 'ab' mode...")
with open("binary_file.bin", "ab") as file:
    file.write(b'\x05\x06')
print("âœ… Binary data appended successfully!")
# Output:
# âœ… Binary data appended successfully!

print("9ï¸âƒ£ Reading binary file after append:")
with open("binary_file.bin", "rb") as file:
    print("ğŸ”¢ Updated Binary Content:", file.read())
# Output:
# ğŸ”¢ Updated Binary Content: b'\x00\x01\x02\x03\x04\x05\x06'

# ---------------- CLEANUP ---------------- #
os.remove("sample.txt")
os.remove("binary_file.bin")
os.remove("newfile.txt")
print("\nğŸ—‘ï¸ Cleanup: Test files deleted!")
# Output:
# ğŸ—‘ï¸ Cleanup: Test files deleted!

